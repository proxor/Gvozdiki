<p>
  <b>Имя:</b>
  <%=h @order.name %>
</p>

<p>
  <b>Телефон:</b>
  <%=h @order.phone %>
</p>

<p>
  <b>Электронная почта:</b>
  <%=h @order.e_mail %>
</p>

<table id="cart">
  <% total = 0 %>
  <% for item in @order.order_items %>
    <% total += item. quantity * item.product.price %>
    <TR>
      <TD><%=h item.product.title %>&nbsp;</TD>
      <TD class="price"><%= number_to_currency(item.product.price, :unit => "руб.", :format => "%n %u") %></TD>
      <TD>&times;&nbsp;<%= item.quantity %>&nbsp;=</TD>
      <TD class="price"><%= number_to_currency(item. quantity * item.product.price, :unit => "руб.", :format => "%n %u") %></TD>
    </TR>
  <% end %>
    <TR id="total">
      <TD colspan="4" class="price"><%= number_to_currency(total, :unit => "руб.", :format => "%n %u") %></TD>
    </TR>
</table>
